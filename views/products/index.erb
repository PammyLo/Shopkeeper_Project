<h1>PRODUCTS</h1>

<div class="button">
  <a href="/products/new">add product</a>
</div><br>

<form action="/products" method="get">
    <label for="order_select">Order by:</label>
    <select name="order_by" id="order_select">
      <option value="stock">stock low-high</option>
      <option value="category">category</option>
      <option value="supplier_id">supplier</option>
      <!-- <option value="4">mark-up</option> -->
    </select>
    <button id="small-button" type="submit">apply</button>
</form><br>


<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th>Category</th>
    <th></th>
    <th>Selling Price</th>
    <th>Markup</th>
    <th></th>
    <th>Stock</th>
    <th></th>
    <th>Delivery Time</th>
    <th></th>
    <th>Supplier</th>
    <th></th>
    <th>Action</th>
  </tr>

  <% for product in @products %>

    <tr>
      <td><a href="/products/<%= product.id %>"><%= product.product_name %></a></td>
      <td></td>
      <td><%= product.category %></td>
      <td></td>
      <td>Â£ <%= product.selling_price %></td>
      <td>%</td>
      <td></td>
      <% if product.low_stock? == true %>
        <td class="low-stock"><%= product.stock %></td>
      <% else %>
        <td class="stock"><%= product.stock %></td>
      <% end %>
      <td></td>
      <td class="dtime"><%= product.delivery_time %> days</td>
      <td></td>
      <td><%= product.supplier.supplier_name %> </td>
      <td></td>
      <td> <a href="/suppliers/<%= product.supplier.id %>">place order</a></td>
      <td>|</td>
      <td> <a href="/products/<%= product.id %>/edit">edit item</a></td>
    </tr>

  <% end %>

</table>
