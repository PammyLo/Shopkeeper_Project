<h1>Add New Customer</h1>

<form class="" action="/customers" method="post">
<div class="form-wrapper">

    <div class="form-el">
      <label for="first_name">First name: </label>
      <input id="first_name" type="text" name="first_name" />
    </div>

    <div class="form-el">
      <label for="last_name">Last Name: </label>
      <input id="last_name" type="text" name="last_name" />
    </div>

    <div class="form-el">
      <label for="address_1">Address 1: </label>
      <input id="address_1" type="integer" name="address_1" />
    </div>

    <div class="form-el">
      <label for="address_2">Address 2: </label>
      <input id="address_2" type="integer" name="address_2" />
    </div>

    <div class="form-el">
      <label for="town_city">Town/city: </label>
      <input id="town_city" type="integer" name="town_city" />
    </div>

    <div class="form-el">
      <label for="postcode">Postcode: </label>
      <input id="postcode" type="integer" name="postcode" />
    </div>

    <div class="form-el">
      <input type="submit" value="add customer" />
    </div>

</div>
</form>
