      <td><a href="/customers/<%= customers.id %>"><%= customers.address_1 %></a></td>
      <td><a href="/customers/<%= customers.id %>"><%= customers.address_2 %></a></td>
      <td><a href="/customers/<%= customers.id %>"><%= customers.town_city %></a></td>
